{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true
  },
  "filesGlob": [
    "./src/main/webapp/app/**/*.ts",
    "./src/main/webapp/platform/**/*.ts",
    "./src/main/webapp/custom-typings.d.ts",
    "./typings/index.d.ts",
    "!./node_modules/**",
    "!./typings/main.d.ts",
    "!./typings/main/**"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
